<div class="flex justify-center">
  <div class="w-full max-w-md px-8 py-12 bg-white rounded-lg shadow">
        <form class="form signup-form">
            <div>
                <h1 class="text-2xl font-semibold text-gray-700 text-center mb-6">Sign Up</h1>
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">Username</label>
                <input 
          class="border rounded-md w-full py-2 px-3 text-gray-700 focus:outline-none focus:border-indigo-500"
          type="text" id="username" placeholder="Enter a Username">
            </div>
             <div class="mb-4">
        <label class="block font-medium text-gray-700 mb-2" for="password">
          Password (8 Characters minimum)  
        </label>

        <input
          class="border rounded-md w-full py-2 px-3 text-gray-700 focus:outline-none focus:border-indigo-500" 
          type="password" id="password" placeholder="Enter a Password">
      </div>
              <div class="mb-4">
        <label class="block font-medium text-gray-700 mb-2" for="confirm-password">
           Confirm Password
        </label>

        <input 
          class="border rounded-md w-full py-2 px-3 text-gray-700 focus:outline-none focus:border-indigo-500"
          type="password" id="confirm-password" placeholder="Confirm your password">
      </div>
            <div>          
                <input class="w-full bg-gray-700 hover:bg-indigo-700 text-white font-bold py-2 px-4 mb-6 rounded" type="submit">
            </div> 
        </form>
        <div class="text-grey-dark mt-6">
            Already have an account? 
            <a class="text-indigo-700 hover:text-gray-700 no-underline  border-blue text-blue" href="../login/">Log in</a>
        </div>
    </div>
</div>
    
<script src="./js/signup.js"></script>